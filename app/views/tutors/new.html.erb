<body>
<%= render 'layouts/header' %>

<h2>Create a new tutor</h2>

<% unless @tutor.nil? || @tutor.id.nil? %>
  <div id="errors">
    <h3>Errors!</h3>
    <ul>
      <% @tutor.errors.messages.each do |field,error| %>
        <li><em><%= "#{field.capitalize} #{error.first}!" %></em></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render "form" %>
</body>